apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ kibana_configmap_name }}
  namespace: {{ logging_namespace }}
  labels:
    app: {{ kibana_label }}
data:
  kibana.yml: |
    server.name: kibana
    server.host: "0.0.0.0"
    elasticsearch.hosts: [ "http://elasticsearch:9200" ]
    monitoring.ui.container.elasticsearch.enabled: true